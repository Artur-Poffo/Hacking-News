---
export interface Props {
  title: string;
  image: string;
  description: string;
  category: string;
}

const { category, description, image, title } = Astro.props;
const Link = `/posts/${category}/${title
.toLocaleLowerCase()
.replace(/\s/g, "-")
.replace(/\?/g, "")}
`
---

<a href={Link} class="w-80 rounded bg-zinc-950 border border-solid border-zinc-600 flex flex-col gap-4">
  <img src={image} class="w-full h-44 object-cover" alt="Imagem de capa do post" />
  <div class="flex flex-col gap-2 p-5">
    <h2 class="font-bold text-lg text-orange-500 font-mono" >{title}</h2>
    <p>{description}</p>
  </div>
</a>
